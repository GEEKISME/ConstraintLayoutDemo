<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="btn1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="btn2"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#765"
        android:gravity="center"
        android:text="banner"
        app:layout_constraintDimensionRatio="H,16:6"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:id="@+id/tv1"
        android:background="#fd3"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="马云：一年交税170多亿马云：一年交税170多亿马云：一年交税170多亿马云：一年交税170多亿"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        android:layout_marginLeft="8dp"
        android:text="8min"
        android:textColor="#333"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/tv4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f67"
        android:text="tab1"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintHorizontal_chainStyle="spread"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/tv5"
        app:layout_constraintLeft_toRightOf="@+id/tv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv6"
        android:background="#A67"
        android:text="tab2"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/tv6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv5"
        android:background="#767"
        android:text="tab3"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/tv7"
        android:background="#612"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideh"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidew"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#699"
        app:layout_constraintRight_toLeftOf="@+id/guidew"
        app:layout_constraintBottom_toBottomOf="@+id/guideh"
        />

</androidx.constraintlayout.widget.ConstraintLayout>